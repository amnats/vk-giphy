{
  "manifest_version": 2,
  "name": "vk giphy",
  "version": "0.5.0",
  "description": "Внедряет поиск Giphy в диалоги Vk",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "https://api.giphy.com/",
    "https://translate.yandex.net/",
    "https://vk.com/",
    "https://login.vk.com/"
  ]
}