{
  "manifest_version": 2,
  "name": "vk giphy",
  "version": "0.5.0",

  "description": "Внедряет поиск Giphy в диалоги Vk",
  
  "content_scripts": [
	{
		"matches": ["https://vk.com/*"],
		"css": ["style.css"],
		"js": ["bundle.js"],
		"run_at": "document_end"
	}
  ],
  
  "permissions": [
	"activeTab",
	"tabs",
	"https://api.giphy.com/",
    "https://translate.google.com/",
	"https://vk.com/"
  ]
}